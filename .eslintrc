{
  "parser": "babel-eslint",
  "rules": {
    "no-undef": 1,
    "no-unused-expressions": 1,
    "no-unused-vars": 1,
    "strict": 0,
    "new-cap": 0,
    "camelcase": 1,
    "react/jsx-uses-react": 1,
    "quotes": ["single"]
  },

  "ecmaFeatures": {
    "jsx": true
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "globals": {
    "BROWSER": true
  },

  "plugins": ["react"]

}
